{
    "name": "vsc-task-buttons",
    "displayName": "vsc-task-buttons",
    "description": "Adding buttons to VS Code UI for running tasks",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.vscode/tasks.json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Task Buttons Configuration",
                "properties": {
                    "TaskButtons.run": {
                        "title": "Run Task",
                        "type": "boolean",
                        "default": true,
                        "description": "Show icon for 'Run Task'"
                    },
                    "TaskButtons.rerun": {
                        "title": "Rerun Task",
                        "type": "boolean",
                        "default": true,
                        "description": "Show icon for 'Rerun Task'"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "TaskButtons.run",
                "title": "Run Task",
                "icon": {
                    "light": "images/play-b.svg",
                    "dark": "images/play-w.svg"
                }
            },
            {
                "command": "TaskButtons.rerun",
                "title": "Rerun Task",
                "icon": {
                    "light": "images/play-circle-b.svg",
                    "dark": "images/play-circle-w.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "editorTextFocus && config.TaskButtons.run",
                    "command": "TaskButtons.run",
                    "group": "navigation@1"
                },
                {
                    "when": "editorTextFocus && config.TaskButtons.rerun",
                    "command": "TaskButtons.rerun",
                    "group": "navigation@2"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.63.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }
}
